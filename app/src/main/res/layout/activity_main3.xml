<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/q5">
    

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="170dp"
        android:id="@+id/r0"

        android:layout_centerHorizontal="true"

        android:background="@drawable/k2"

        android:layout_marginTop="76dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im2"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/hope3"
            android:layout_below="@id/heading"
            android:layout_margin="9dp"
            android:layout_centerVertical="true">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:id="@+id/heading"
            android:layout_margin="9dp"
            android:fontFamily="@font/berkshire_swash"
            android:layout_centerHorizontal="true"
            android:text="--*Result*--"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/marks"

            android:fontFamily="@font/berkshire_swash"
            android:drawableRight="@drawable/ic_baseline_done_all_24"
            android:layout_marginStart="120dp"
            android:layout_marginTop="80dp"
            android:text="Marks"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/r3"
        android:layout_width="290dp"
        android:layout_height="170dp"
       android:layout_centerHorizontal="true"
        android:id="@+id/r2"

        android:background="@drawable/k2"

        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Click on below to attempt more"
            android:textColor="@color/black"
            android:fontFamily="@font/berkshire_swash"
            android:drawableRight="@drawable/ic_baseline_subdirectory_arrow_left_24"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="9dp">

        </TextView>

        <Button
            android:id="@+id/new1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="new"
            android:fontFamily="@font/berkshire_swash"
            android:onClick="back"></Button>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/r3"
        android:layout_below="@id/r0"

        android:background="@drawable/k2"
       android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback:-"
            android:fontFamily="@font/berkshire_swash"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:drawableRight="@drawable/ic_baseline_feedback_24"
            android:textStyle="bold"
            android:layout_margin="12dp">

        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/new2"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_baseline_star_rate_24">

        </ImageView>
    <Button

        android:id="@+id/new2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="rate us"
        android:fontFamily="@font/berkshire_swash"
        android:onClick="back2"></Button>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/new2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_star_rate_24">

        </ImageView>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/black"
            android:rating="2"
            android:scaleX="0.60"
            android:scaleY="0.65"
            android:numStars="5"
          android:visibility="invisible"
           android:progressBackgroundTint="@color/white"
            android:layout_below="@id/new2"
            android:layout_centerHorizontal="true"
            android:progressTint="#F5C517"
           >

        </RatingBar>

    </RelativeLayout>



    <ImageView
        android:id="@+id/im3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:src="@drawable/hope2"
        ></ImageView>


</RelativeLayout>
